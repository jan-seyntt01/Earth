@page "/"
@model Earth.Pages.LoginModel
@{
    Layout = "~/Pages/Shared/_LogLayout1.cshtml";
}

<div class="container d-flex justify-content-center align-items-center vh-100 fade-in-up">
    <div class="card glass-card p-4" style="width: 400px;">
        <div class="text-center mb-4">
            <h2 class="fw-bold text-white">HelloEarth</h2>
            <p class="text-white-50 small">Enter your credentials to continue</p>
        </div>

        <form method="post">
            <div class="text-danger mb-3" asp-validation-summary="ModelOnly"></div>

            <div class="form-floating mb-3">
                <input asp-for="Users.Username" class="form-control custom-input" placeholder="Username" autocomplete="off" />
                <label asp-for="Users.Username">Username</label>
                <span class="text-danger" asp-validation-for="Users.Username"></span>
            </div>

            <div class="form-floating mb-3">
                <input type="password" asp-for="Users.Password" class="form-control custom-input" placeholder="Password" />
                <label asp-for="Users.Password">Password</label>
                <span class="text-danger" asp-validation-for="Users.Password"></span>
            </div>

            <div class="d-flex justify-content-between align-items-center mb-4">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="rememberMe">
                    <label class="form-check-label small text-white" for="rememberMe">Remember me</label>
                </div>
                <a asp-page="/ForgotPassword" class="text-decoration-none small forgot-link">
                    Forgot password?
                </a>
            </div>

            <div class="d-grid">
                <button type="submit" class="btn btn-login shadow-sm">
                    Login
                </button>
            </div>
        </form>
    </div>
</div>
