@page
@model Earth.Pages.AboutModel
@{
    ViewData["Title"] = "Our Story";
}

<div class="full-viewport-section">
    <div class="about-container mt-5">

        <!-- HERO -->
        <section class="about-hero text-center py-5">
            <div class="container">
    @*             <p class="established text-info">
                    Established @Model.AboutInfo.FoundationYear
                </p> *@

                <h1 class="main-title text-white mb-4">Our Story</h1>

                <div class="row justify-content-center">
                    <div class="col-lg-8">
                        <p class="intro-paragraph">
                            @Model.AboutInfo.Introduction
                        </p>
                    </div>
                </div>
            </div>
        </section>


        <!-- MISSION / VISION -->
        <section class="values-section py-5">
            <div class="container">
                <div class="row g-4">

                    <div class="col-md-6">
                        <div class="value-card h-100">
                            <h3 class="text-white">Our Mission</h3>
                            <p class="text-light-50 text-white">
                                @Model.AboutInfo.Mission
                            </p>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="value-card h-100">
                            <h3 class="text-white">Our Vision</h3>
                            <p class="text-light-50 text-white">
                                @Model.AboutInfo.Vision
                            </p>
                        </div>
                    </div>

                </div>
            </div>
        </section>


        <!-- PURPOSE -->
        <section class="purpose-section py-5 text-center">
            <div class="container">
                <h2 class="section-title text-white mb-4">Why HelloEarth Exists</h2>
                <div class="row justify-content-center">
                    <div class="col-lg-8">
                        <p class="purpose-text">
                            @Model.AboutInfo.Purpose
                        </p>
                    </div>
                </div>
            </div>
        </section>


        <!-- CORE VALUES -->
        <section class="core-values py-5">
            <div class="container">
                <h2 class="section-title text-center text-white mb-4">
                    Our Core Values
                </h2>
                <div class="values-box mx-auto">
                    <p class="text-light-50 text-white">
                        @Model.AboutInfo.CoreValues
                    </p>
                </div>
            </div>
        </section>


        <!-- TARGET AUDIENCE -->
        <section class="target-section py-5 text-center">
            <div class="container">
                <h2 class="section-title text-white mb-4">
                    Who This Platform Serves
                </h2>
                <div class="row justify-content-center">
                    <div class="col-lg-8">
                        <p class="purpose-text">
                            @Model.AboutInfo.TargetAudience
                        </p>
                    </div>
                </div>
            </div>
        </section>


        <!-- IMPACT -->
        <section class="impact-section py-5 text-center">
            <div class="container">
                <h2 class="section-title text-white mb-3">Our Impact</h2>
                <p class="impact-text">
                    @Model.AboutInfo.Impact
                </p>
            </div>
        </section>


        <!-- IMAGE STRIP -->
        <section class="image-strip mt-5">
            <div class="container-fluid p-0">
                <img src="@Model.AboutInfo.ImagePath"
                     alt="Earth Horizon"
                     class="w-100 hero-strip-img" />
            </div>
        </section>
    </div>
