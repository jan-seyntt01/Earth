    @if (User.Identity?.IsAuthenticated == true)
    {
        <div class="container py-5 text-center">
            <div class="admin-panel p-3 rounded shadow-sm border border-secondary">
                <p class="text-secondary small mb-2">Internal Management</p>
                <a asp-page="/AdminAboutContent/Edit" asp-route-id="1" class="btn btn-sm btn-outline-info">Update Content</a>
                <p class="text-muted x-small mt-2 mb-0">Last updated: @Model.AboutInfo.LastUpdated.ToString("d")</p>
            </div>
